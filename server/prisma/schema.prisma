generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id @default(uuid())
  title     String
  bannerUrl String
  ads       Ad[]
}

model Ad {
  id              String   @id @default(uuid())
  name            String
  yearsPlaying    Int
  discord         String
  weekDays        String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createdAt       DateTime @default(now())
  gameId          String
  game            Game     @relation(fields: [gameId], references: [id])
}

model User {
  id        String @id @default(uuid())
  discordId String
  username  String
}
